<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogCreateActivity">

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="#63C65F"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTime2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Инкубационный шкаф"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerInc"
        app:layout_constraintEnd_toStartOf="@+id/spinnerInc"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinnerInc"
        app:layout_constraintVertical_bias="0.5" />

    <Spinner
        android:id="@+id/spinnerInc"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/btnPick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="#63C65F"
        android:text="@string/PickDateTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerInc" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="С: "
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/btnPick"
        app:layout_constraintStart_toStartOf="@+id/btnPick"
        app:layout_constraintTop_toBottomOf="@+id/btnPick" />

    <Button
        android:id="@+id/btnPick3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="#63C65F"
        android:text="@string/PickDateTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTime" />

    <TextView
        android:id="@+id/textTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="До: "
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/btnPick3"
        app:layout_constraintStart_toStartOf="@+id/btnPick3"
        app:layout_constraintTop_toBottomOf="@+id/btnPick3" />

</androidx.constraintlayout.widget.ConstraintLayout>